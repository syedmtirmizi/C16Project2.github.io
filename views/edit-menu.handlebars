<div class="container new-form">
  <div class="row justify-content-md-center">
    <form class="new-form-style">
      <div class="form-group">
        <label
          for="menu-description"
          class="col-form-label col-form-label-lg"
        >Description</label>
        <input name="menu-description"
          type="text"
          class="form-control form-control-lg"
          id="menu-description"
          aria-describedby="emailHelp"
          placeholder="Description"
          value="{{menu.description}}"
        />
      </div>
      <div class="form-group">
        <label
          for="res-address"
          class="col-form-label col-form-label-lg"
        >Ingredients</label>
        <input name="menu-ingredients"
          type="text"
          class="form-control form-control-lg"
          id="res-address"
          placeholder="Ingredients"
          value="{{menu.ingredients}}"
        />
      </div>
      <div class="form-group">
        <label
          for="res-address"
          class="col-form-label col-form-label-lg"
        >Price</label>
        <input name="menu-price"
          type="text"
          class="form-control form-control-lg"
          id="res-address"
          placeholder="Price"
          value="{{menu.price}}"
        />
      </div>
      <div class="form-group">
        <label
          for="res-address"
          class="col-form-label col-form-label-lg"
        >Location by Id</label>
        <input name="menu-id"
          type="text"
          class="form-control form-control-lg"
          id="res-address"
          placeholder="Enter Restaurant Id"
          value="{{location}}"
        />
      </div>
      <button type="submit" class="btn btn-primary">Update Menu Item!</button>
      <button type="button" class="btn btn-primary delete">Delete Menu Item</button>
    </form>
  </div>
</div>

<script src="/javascript/editmenu.js"></script>
<script src="/javascript/deletemenu.js"></script>