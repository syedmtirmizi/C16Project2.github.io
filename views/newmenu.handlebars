<div class="container new-form">
  <div class="row justify-content-md-center">
    <form class="new-form-style add-new-menu">
      <div class="form-group">
        <label for="menu-description" class="col-form-label col-form-label-lg">Description</label>
        <input type="text" name="menu-description"  class="form-control form-control-lg" id="menu-description" aria-describedby="emailHelp" placeholder="Description">
      </div>
